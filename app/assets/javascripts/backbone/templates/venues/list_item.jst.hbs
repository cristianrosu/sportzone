<div class="sport-venue">
    <p class="city">{{venue.city}}</p>
    <p class="lead" style="margin-bottom:2px">
        <a href="{{venue.web_url}}">
          {{venue.name}}
        </a>
    </p>
    <p>
      <i class="glyphicon glyphicon-map-marker"></i>
      {{venue.address}}
    </p>

    {{#each venue.sports}}
        <label class="label-sport">{{name}}</label>
    {{/each}}
    <div class="js-venue-other-info other-info hidden">
        <p><strong>Alte informatii</strong></p>
        <p>{{venue.description}}</p>
        <p>
            <i class="glyphicon glyphicon-phone"></i>
            {{venue.phone}}
        </p>
        <p>
            <i class="glyphicon glyphicon-globe"></i>
            {{venue.url_website}}
        </p>
        <p>{{venue.url_facebook}}</p>
    </div>
    <a class="view-more js-view-more">
      <i class="glyphicon glyphicon-menu-down"></i>
    </a>
</div>
